<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="src.weather"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="src.weather.SplashActivity"
            android:label="@string/title_activity_splash" >
        	<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="src.weather.MainActivity"
            android:label="@string/title_activity_main" >
            
        </activity>
        <activity
            android:name="src.weather.OptionsWeatherActivity"
            android:label="@string/title_activity_options_weather" >
        </activity>
        <activity
            android:name="src.weather.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="src.weather.DisplayWeatherActivity"
            android:label="@string/title_activity_display_weather" >
        </activity>
        <activity
            android:name="src.weather.GraphActivity"
            android:label="@string/title_activity_graph" >
        </activity>
        
    </application>

</manifest>
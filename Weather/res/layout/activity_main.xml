
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_map"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="false"
            android:ellipsize="none"
            android:gravity="center"
            android:longClickable="false"
            android:text="Weather in Ireland"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/b_derry"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="87dp"
                android:layout_marginTop="36dp"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_belfast"
                android:layout_width="65dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/b_derry"
                android:layout_marginRight="34dp"
                android:layout_marginTop="-10dp"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_sligo"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_below="@+id/b_belfast"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/b_derry"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_drogheda"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/b_belfast"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/b_sligo"
                android:layout_marginTop="13dp"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_dublin"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/b_drogheda"
                android:layout_marginTop="0dp"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_galway"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@+id/b_drogheda"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/b_derry"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_limerick"
                android:layout_width="85dp"
                android:layout_height="38dp"
                android:layout_alignLeft="@+id/b_sligo"
                android:layout_below="@+id/b_galway"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="20dp"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_waterford"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_alignRight="@+id/b_belfast"
                android:layout_below="@+id/b_limerick"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="-5dp"
                android:layout_toRightOf="@+id/b_limerick"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_dingle"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/b_waterford"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="-20dp"
                android:background="#00000000" 
                android:clickable="true" />

            <Button
                android:id="@+id/b_cork"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/b_sligo"
                android:layout_below="@+id/b_dingle"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="-15dp"
                android:background="#00000000"
                android:clickable="true" />

        </RelativeLayout>

    </LinearLayout>
